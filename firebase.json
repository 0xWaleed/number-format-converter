{
  "functions": {
    "predeploy": [
      "npm --prefix ./backend/ run lint",
      "npm --prefix ./backend/ run build"
    ],
    "source": "backend"
  },
  "hosting": {
    "public": "backend/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/convert",
        "function": "convert"
      }
    ]
  }
}
